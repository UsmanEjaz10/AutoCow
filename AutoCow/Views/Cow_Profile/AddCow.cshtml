@model Cow_profile

@section title{
    <title>
        Add | Cow
    </title>
}

<h2>Add Cow</h2>



<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-9 col-md-8">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Daily Entry</h6>

                @using (Html.BeginForm(FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.id, "ID:" , htmlAttributes: new {@class = "form-label"})
                        @Html.TextBoxFor(m => m.id, new { @class = "form-control" })
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(m => m.type, "Type:" , htmlAttributes: new {@class = "form-label"})
                        @Html.TextBoxFor(m => m.type, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.color, "Color:" , htmlAttributes: new {@class = "form-label"})
                        @Html.TextBoxFor(m => m.color, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.price, "Price:" , htmlAttributes: new {@class = "form-label"})
                        @Html.TextBoxFor(m => m.price, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.avg_milk, "Average Milk:" , htmlAttributes: new {@class = "form-label"})
                        @Html.TextBoxFor(m => m.avg_milk, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.avg_temperature, "Temperature:" , htmlAttributes: new {@class = "form-label"})
                        @Html.TextBoxFor(m => m.avg_temperature, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.category, "Diet plan:" , htmlAttributes: new {@class = "form-label"})
                        @Html.TextBoxFor(m => m.category, new { @class = "form-control" })
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(m => m.dob, "Date of birth:" , htmlAttributes: new {@class = "form-label"})
                        @Html.TextBoxFor(m => m.dob, new { @class = "form-control" })
                    </div>

                    <input type="submit" class="btn btn-primary">
                

                }
            </div>
        </div>

        <script>
            document.getElementById("Cows").classList.add("active");
            document.getElementById("Dashboard").classList.remove("active");

        </script>
