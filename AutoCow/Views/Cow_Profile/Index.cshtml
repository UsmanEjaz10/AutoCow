@using AutoCow.Models
@model Cow_profile
@{
    ViewData["title"] = "Cow | Handle";
    
}

<button id="convertButton" class="btn btn-primary mb-3 align-content-end">Convert to Table</button>
<button id="convertToCards" class="btn btn-primary mb-3 align-content-end">Convert to Cards</button>
<button id="AddCow" class="btn btn-primary mb-3 align-content-end"><a href="Add">Add</a>
</button>


<div class="row" id="cardContainer">
    @foreach (Cow_profile item in ViewBag.Cows)
    {
        <div class="col-md-4">
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <h5 class="card-title">Cow:  @item.id</h5>
                <p class="card-text">Type:  @item.type</p>
                <p class="card-text">Price: @item.price</p>
                <p class="card-text">Avg-Milk: @item.avg_milk</p>
                <p class="card-text">Avg-Temperature: @item.avg_temperature</p>
                <p class="card-text">Category: @item.category</p>

                <div class="d-flex justify-content-between">
                        @using (Html.BeginForm(FormMethod.Post))
                        {
                            @Html.Hidden("action" , "update")
                            <input type="submit" value="Update" class="btn btn-primary">
                        }
                        @using (Html.BeginForm(FormMethod.Post))
                        {
                            <input type="hidden" name="id" value="@item.id">
                            <input type="hidden" name="type" value="@item.type">
                            <input type="hidden" name="price" value="@item.price">
                            <input type="hidden" name="color" value="@item.color">
                            <input type="hidden" name="milk" value="@item.avg_milk">
                            <input type="hidden" name="temp" value="@item.avg_temperature">
                            <input type="hidden" name="category" value="@item.category">
                            <input type="hidden" name="action" value="delete">
                            <input type="submit" value="Delete" class="btn btn-primary">
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#convertButton").click(function () {
            var tableHtml = "<table class='table'><thead><tr><th>ID</th><th>Type</th><th>Price</th></tr></thead><tbody>";

            $("#cardContainer .card").each(function () {
                var id = $(this).find(".card-title:eq(0)").text().replace("ID: ", "");
                var type = $(this).find(".card-text:eq(0)").text().replace("Type: ", "");
                var price = $(this).find(".card-text:eq(1)").text().replace("Price: $", "");

                tableHtml += "<tr><td>" + id + "</td><td>" + type + "</td><td>" + price + "</td></tr>";
            });

            tableHtml += "</tbody></table>";

            $("#cardContainer").html(tableHtml);
        });

        var originalHtml = $("#cardContainer").html(); // Store the original card layout

        $("#convertToCards").click(function () {
            var isTable = $("#cardContainer table").length > 0;

            if (isTable) {
                $("#cardContainer").html(originalHtml); // Restore the original card layout
            }
        });
    });
    </script>