@model Daily_plan

@section title{
<title>
    Add | Daily Entry
</title>
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6 col-md-8">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Daily Entry</h6>
                
                    @using (Html.BeginForm(FormMethod.Post))
                    {
                  
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.id, "Cattle ID:", htmlAttributes: new {@class = "form-label"})
                            @Html.TextBoxFor(m => m.id, new { @class = "form-control" })
                        </div>


                        <div class="form-group mb-3">
                        @Html.LabelFor(m => m.milk, "Milk:", htmlAttributes: new {@class = "form-label"})
                            @Html.TextBoxFor(m => m.milk, new { @class = "form-control" })
                        </div>

                        <div class="form-group mb-3">
                        @Html.LabelFor(m => m.temperature, "Temperature:", htmlAttributes: new {@class = "form-label"})
                            @Html.TextBoxFor(m => m.temperature, new { @class = "form-control" })
                        </div>

                        <div class="form-group mb-3">
                        @Html.LabelFor(m => m.insemination, "Insemination:", htmlAttributes: new {@class = "form-label"})
                            @Html.TextBoxFor(m => m.insemination, new { @class = "form-control" })
                        </div>

                        <div class="form-group mb-3">
                        @Html.LabelFor(m => m.heart_rate, "Heart rate:", htmlAttributes: new {@class = "form-label"})
                            @Html.TextBoxFor(m => m.heart_rate, new { @class = "form-control" })
                        </div>

                        <div class="form-group mb-3">
                        @Html.LabelFor(m => m.respiratory_rate, "Respiratory rate:", htmlAttributes: new {@class = "form-label"})
                            @Html.TextBoxFor(m => m.respiratory_rate, new { @class = "form-control" })
                        </div>

                    <div class="form-group mb-3">

                    <label for="option">Any Symptoms:</label>
                    <select id="option" name="option" class="bg-dark text-white form-control" data-icon="fas fa-double-arrow" onchange="showFields(this)">
                        <option value="no">No</option>
                        <option value="yes">Yes</option>
                    </select>
                    </div>

                    <div id="fieldsContainer" style="display: none;">

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.symptom1, "Symptom1:", htmlAttributes: new {@class = "form-label"})
                            @Html.TextBoxFor(m => m.symptom1, new { @class = "form-control", value = "null" })
                        </div>
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.symptom2, "Symptom2:", htmlAttributes: new {@class = "form-label"})
                            @Html.TextBoxFor(m => m.symptom2, new { @class = "form-control" , value = "null" })
                        </div>
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.symptom3, "Symptom3:", htmlAttributes: new {@class = "form-label"})
                            @Html.TextBoxFor(m => m.symptom3, new { @class = "form-control", value = "null" })
                        </div>

                   </div>

                        <input type="submit" class="btn btn-primary">
                    }
            </div>
        </div>

        <div class="col-sm-12 col-xl-6">
            <div class="h-50 bg-secondary rounded">
                <div class="d-flex align-items-center justify-content-between mb-2 p-4">
                    <h6 class="mb-0">Calender</h6>
                </div>
                <div id="calender"></div>
            </div>
        </div>
        </div>

        </div>

<script>
    document.getElementById("DailyEntry").classList.add("active");
    document.getElementById("Dashboard").classList.remove("active");

   function showFields(selectElement) {
            var fieldsContainer = document.getElementById("fieldsContainer");
            fieldsContainer.style.display = selectElement.value === "yes" ? "block" : "none";
        }

</script>