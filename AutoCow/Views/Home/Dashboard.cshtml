<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script type="text/javascript">

    //Line Chart //

    var dates = @Html.Raw(ViewBag.Dates);
    var milkProductions = @Html.Raw(ViewBag.MilkProductions);



    var ctx = document.getElementById('productionChart').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: dates,
            datasets: [{
                label: 'Milk Production',
                data: milkProductions,
                backgroundColor: 'rgba(0, 123, 255, 0.5)',
                borderColor: 'rgba(93, 45, 190, 1)',
                borderWidth: 1
            }
            ]
        }
    }
    )

    //----------------------------Bar Chart ----------------------------------------//

    var bar_dates = @Html.Raw(ViewBag.bar_dates);
    var bar_milk = @Html.Raw(ViewBag.bar_milk);
    var bar_types = @Html.Raw(ViewBag.bar_types);

    var sahiwal_milk = [];
    var brahman_milk = [];
    var sindhi_milk = [];

    for (var i = 0; i < bar_dates.length; i++) {
        if (bar_types[i] == "Sahiwal Cattle") {
            sahiwal_milk.push(bar_milk[i]);
        }
        else if (bar_types[i] == "Brahman") {
            brahman_milk.push(bar_milk[i]);
        }
        else if (bar_types[i] == "Red Sindhi") {
            sindhi_milk.push(bar_milk[i]);
        }
    }

    const unique_dates = [...new Set(bar_dates)];


    const bar = document.getElementById("daily_planChart").getContext("2d");
    var barChart = new Chart(bar, {
        type: 'bar',
        data: {
            labels: unique_dates,
            datasets: [
                {
                    label: 'Sahiwal Cattle',
                    data: sahiwal_milk,
                    backgroundColor: 'rgba(255, 99, 132, 0.5)'
                },
                {
                    label: 'Brahman',
                    data: brahman_milk,
                    backgroundColor: 'rgba(0, 200, 0, 0.5)'
                },
                {
                    label: 'Red Sindhi',
                    data: sindhi_milk,
                    backgroundColor: 'rgba(75, 192, 192, 0.5)'
                }
            ]
        },
        options: {
            responsive: true,
            categoryPercentage: 0.4,
            scales: {

                y: {
                    beginAtZero: true
                }
            }
        }
    });

    //---------------------------------------------------------------//

    var alert_conditions = @Html.Raw(ViewBag.alert_conditions);
    var alert_counts = @Html.Raw(ViewBag.alert_counts);
    var total = 0;
    for (var j = 0; j < alert_counts.length; j++) {
        if (alert_conditions[j] == "Critical") {
            document.getElementById("critical").innerHTML = "Critical = " + alert_counts[j];
            total++;
        }
        else if (alert_conditions[j] == "Serious") {
            document.getElementById("serious").innerHTML = "Serious = " + alert_counts[j];
            total++;
        }
    }
    document.getElementById("TotalAlerts").innerHTML =  total;

    //-------------------------------------------------------------------------------//


    var Sahiwal_count = 0;
    var Brahman_count = 0;
    var Sindhi_count = 0;

    for (var i = 0; i < sahiwal_milk.length; i++) {
        Sahiwal_count += sahiwal_milk[i];
    }

    for (var i = 0; i < brahman_milk.length; i++) {
        Brahman_count += brahman_milk[i];
    }

    for (var i = 0; i < sindhi_milk.length; i++) {
        Sindhi_count += sindhi_milk[i];
    }

    var total_milk = Sahiwal_count + Brahman_count + Sindhi_count;

    document.getElementById("TotalMilk").innerHTML =   total_milk + "L";
    document.getElementById("Sahiwal").innerHTML = "Sahiwal Cattle: " + Sahiwal_count + "L <br>";
    document.getElementById("Brahman").innerHTML = "Brahman: " + Brahman_count + "L <br>";
    document.getElementById("Red").innerHTML = "Red Sindhi: " + Sindhi_count + "L <br>";


</script>

